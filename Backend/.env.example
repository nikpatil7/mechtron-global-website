# ==========================================
# BACKEND ENVIRONMENT CONFIGURATION TEMPLATE
# ==========================================
# Copy this file to .env and update with your values

# ==================================
# SERVER CONFIGURATION
# ==================================
PORT=5000
NODE_ENV=development

# ==================================
# DATABASE
# ==================================
# Development: mongodb://localhost:27017/dbname
# Production: mongodb+srv://user:pass@cluster.mongodb.net/dbname
MONGO_URI=mongodb://localhost:27017/mechtron

# ==================================
# CORS & SECURITY
# ==================================
# Development: http://localhost:5173
# Production: https://yourdomain.com
CORS_ORIGIN=http://localhost:5173

# Generate strong random string for production (32+ characters)
JWT_SECRET=your-secret-key-change-this-in-production

# ==================================
# CLIENT WEBSITE INFO
# ==================================
SITE_NAME=Your Company Name
SITE_URL=http://localhost:5173
SITE_DOMAIN=localhost:5173

# ==================================
# CLIENT CONTACT INFORMATION
# ==================================
# Update with client's actual contact details
CONTACT_EMAIL=sales@yourdomain.com
SUPPORT_EMAIL=info@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
CONTACT_FROM_EMAIL=noreply@yourdomain.com
CONTACT_TO_EMAIL=sales@yourdomain.com

# Phone numbers
CONTACT_PHONE=+1 (555) 000-0000
CONTACT_PHONE_SECONDARY=

# Business address
COMPANY_ADDRESS=123 Business Street, City, State, ZIP, Country

# ==================================
# SMTP EMAIL CONFIGURATION
# ==================================
# Gmail example (use App Password, not regular password)
# Get App Password: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-digit-app-password

# ==================================
# ADMIN AUTHENTICATION
# ==================================
# Change this to a strong password for production!
ADMIN_PASSWORD=admin123

# ==================================
# SOCIAL MEDIA LINKS
# ==================================
SOCIAL_LINKEDIN=https://www.linkedin.com/company/your-company
SOCIAL_TWITTER=https://twitter.com/yourcompany
SOCIAL_FACEBOOK=https://www.facebook.com/yourcompany
SOCIAL_INSTAGRAM=https://www.instagram.com/yourcompany

# ==================================
# reCAPTCHA v3
# ==================================
# Get keys: https://www.google.com/recaptcha/admin
# Below are TEST keys - replace with production keys!
RECAPTCHA_SECRET_KEY=6LeIxAcTAAAAAGG-vFI1TnRWxMZNFuojJ4WifJWe

# ==================================
# CLOUDINARY (Optional - Cloud Storage)
# ==================================
# Get credentials: https://cloudinary.com/console
# Leave empty to use local file storage
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
FOLDER_NAME=uploads

